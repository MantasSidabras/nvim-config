" movement changes
map <buffer> j gj
map <buffer> k gk
" formatting text
setlocal formatoptions=1
setlocal noexpandtab
setlocal wrap
setlocal linebreak
setlocal textwidth=80
setlocal colorcolumn=81
" spelling and thesaurus
setlocal spell spelllang=en_us
" complete+=s makes autocompletion search the thesaurus
setlocal complete+=s
